<%-include("../includes/navigation.ejs") %>

<body>
  <div class="flex flex-col items-center py-20">
    <form
      class="w-2/5 lg:w-1/5 text-lg text-gray-600 space-y-5"
      action="/auth/sign-up"
      method="post"
    >
      <% if(existingUser) { %>
      <div class="w-full rounded-lg p-5 border-2 border-red-500 bg-red-100">
        <p>User already exist, please sign in!</p>
      </div>
      <% } %>
      <input
        name="userName"
        class="h-16 w-full rounded-lg border-2 border-gray-400 p-3"
        placeholder="UserName"
        type="text"
        required
      />

      <input
        name="email"
        class="h-16 w-full rounded-lg border-2 border-gray-400 p-3"
        placeholder="Email"
        type="email"
        required
      />

      <input
        name="password"
        class="h-16 w-full rounded-lg border-2 border-gray-400 p-3"
        placeholder="Password"
        type="password"
        required
      />
      <button
        type="submit"
        class="w-full h-16 bg-violet-600 text-white rounded-lg p-3"
      >
        Sign Up
      </button>
    </form>
  </div>
</body>
